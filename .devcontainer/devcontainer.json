{
  "name": "virtual-voicebot-backend DevContainer",
  "build": {
    "dockerfile": "../virtual-voicebot-backend/Dockerfile",
    "context": "../virtual-voicebot-backend",
    "target": "build"
  },

  // ★ VS Code がデフォルトでマウントする場所
  "workspaceFolder": "/workspaces/virtual-voicebot-backend",

  "customizations": {
    "vscode": {
      "extensions": [
        "rust-lang.rust-analyzer",
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  },

  "remoteUser": "root",

  // デフォルトの workspaceFolder(/workspaces/virtual-voicebot-backend) でそのままビルド
  "postCreateCommand": "cargo build || true"
}
