{
  "name": "virtual_voicebot DevContainer",
  "build": {
    "dockerfile": "../Dockerfile",
    "context": "..",
    "target": "build"
  },

  // ★ VS Code がデフォルトでマウントする場所
  "workspaceFolder": "/workspaces/virtual_voicebot",

  "customizations": {
    "vscode": {
      "extensions": [
        "rust-lang.rust-analyzer",
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  },

  "remoteUser": "root",

  // デフォルトの workspaceFolder(/workspaces/virtual_voicebot) でそのままビルド
  "postCreateCommand": "cargo build || true"
}
